- content_for :application_body do

- content_for :nav_patient do
  = render partial: "layouts/patientnav"

  .container 
    .row
      .medium-9.columns
        == content_for?(:form) ? yield(:form) : yield
      .medium-3.columns
        table.table.table-bordered
          tr
            th Add a Patient Evaluation
            tr 
              td = link_to '+ Annual Evaluation', new_patient_annual_evaluation_path(@patient), { class: "" }
            tr
              td = link_to '+ OMR', new_patient_omr_path(@patient), { class: "" }
            tr
              td = link_to '+ Acute Rehab', new_patient_acute_rehab_path(@patient), { class: "" }    
        table.table.table-bordered.table-striped
          tr
            th Episodes of Care History
          - for episode in @patient.episode_of_cares do
            tr class="clickable-row" data-href=edit_polymorphic_url([@patient, episode])
              .medium-12.columns
                td 
                  = episode.class.name
                  .small
                    | completion date: 
                    / TODO: Make sure this always exists
                    / = episode.eval_completed
          - if @patient.episode_of_cares.empty?
            tr
              td There are no recorded episodes of care for this patient  
  
        table.table.table-bordered.table-striped
          tr
            th Summary of Assessments
          tr
            td 
              | Asia: LOI
              .small
                | completion date: DATE
          tr
            td 
              | FIM: SCORE
              .small
                | completion date: DATE
          tr
            td 
              | CHART SF: SCORE
              .small
                | completion date: DATE
          tr
            td 
              | SF8: SCORE
              .small
                | completion date: DATE
          tr
            td 
              | SWLS: SCORE
              .small
                | completion date: DATE
          tr
            td 
              | KURTZ EDSS: SCORE
              .small
                | completion date: DATE
        / TODO: - add actual values here
        / TODO: - add conditional messages for no records
= render template: "layouts/application"
