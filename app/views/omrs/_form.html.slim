= wrapped_form_for([@patient, @omr]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :admission_date, as: :string, input_html: { class: "datepicker" }
    = f.input :start_asia
    = f.input :start_fim
    = f.input :start_fam
    = f.input :start_swls
    = f.input :start_chart_sf

    .callout
        h4 Start SF8
        = f.simple_fields_for :start_sf8 do |sf8_builder|
            = render 'shared/sf8_fields', :f => sf8_builder

    = f.input :dusoi

      # GOAL
    = f.input :goal_fim
    = f.input :goal_fam

      # FINISH
    = f.input :omb_completed, as: :string, input_html: { class: "datepicker" }
    = f.input :finish_asia
    = f.input :finish_fim
    = f.input :finish_fam
    = f.input :finish_swls
    = f.input :finish_chart_sf

    .callout
        h4 Start SF8
        = f.simple_fields_for :finish_sf_8 do |sf8_builder|
            = render 'shared/sf8_fields', :f => sf8_builder

    = f.input :finish_uspeq
    = f.input :discharge_location,
    collection: Omr.collections[:discharge_location],
    label_method: :name,
    value_method: :id,
    :prompt => "Select one"

  .row
    .col-sm-offset-3.col-sm-9.form-actions
      = f.submit class:"btn btn-success"
